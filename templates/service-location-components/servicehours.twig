{% if serviceLocationChannel.serviceHours %}
  {% set additionalInfo = false %}
  {% for serviceHour in serviceLocationChannel.serviceHours %}
  {% if serviceHour.additionalInformation|localizedValue(lang) %}
  {%  set additionalInfo = true  %}
  {% endif %}
  {% endfor %}
  {% spaceless %}
    <table class="service-hours">
      <thead>
        <tr>
          <th>Päivä</th>
          <th>Aika</th>
          {% if additionalInfo %}
            <th>Lisätiedot</th>
          {% endif %}
        </tr>
      </thead>
      <tbody>
        {% for serviceHour in serviceLocationChannel.serviceHours %}
          <tr>
            <td>{{ serviceHour.days|formatWeekDays(true) }}</td>
            <td>{% if serviceHour.opens and  serviceHour.closes %}{{ serviceHour.opens|formatServiceHour }} - {{ serviceHour.closes|formatServiceHour }}{% endif %}</td>
            {% if additionalInfo %}
              <td>{{ serviceHour.additionalInformation|localizedValue(lang)|nl2br }}</td>
            {% endif %}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endspaceless %}
{% endif %}