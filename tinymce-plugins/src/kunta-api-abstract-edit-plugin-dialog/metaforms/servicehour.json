      "columns": [{
        "type": "enum",
        "title": "Viikonpäivä",
        "name": "day",
        "values": [{
          "value": "1",
          "text": "Maanantai"
        }, {
          "value": "2",
          "text": "Tiistai"
        }, {
          "value": "3",
          "text": "Keskiviikko"
        }, {
          "value": "4",
          "text": "Torstai"
        }, {
          "value": "5",
          "text": "Perjantai"
        }, {
          "value": "6",
          "text": "Lauantai"
        }, {
          "value": "0",
          "text": "Sunnuntai"
