      "title": "Toistaiseksi voimassa oleva",
      "name": "Standard-validForNow",
      "type": "radio",
      "required": true,
      "options":  [{
        "name": "true",
        "text": "Toistaiseksi voimassa oleva",
        "checked": true
      }, {
        "name": "false",
        "text": "Voimassa ajanjaksolla"
      }],
      "contexts": ["FORM"],
      "editable": true
    }, {
      "visible-if": {
        "field": "Standard-validForNow",
